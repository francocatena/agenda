<h1>Listado de personas</h1>

<%= form_for :persona, url: personas_path, method: :get do |f| %>
  <%= text_field_tag :q, params[:q] %>

  <%= f.submit 'Buscar' %> <%= link_to 'Ver todos', personas_path if params[:q].present? %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @personas.each do |persona| %>
    <tr>
      <td><%= link_to "#{persona.nombre} #{persona.apellido}", persona %></td>
      <td><%= link_to 'Editar', edit_persona_path(persona) %></td>
      <td><%= link_to 'Eliminar', persona, method: :delete, data: { confirm: '¿Está seguro?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br />

<%= link_to 'Nueva persona', new_persona_path %>
